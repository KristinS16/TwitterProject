<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<div>
    <h1><%= @tag.phrase %></h1>
	</div>

	<div class="row">
	  <!-- a place for current user stats -->
	  <div>
	    <% @tag.tweets.order(created_at: :desc).each do |tweet| %>
	        <p> 
			    <%= tweet.user.name %> <%= "@#{tweet.user.username}" %>
			    &#8226 <%= time_ago_in_words(tweet.created_at) %>
	        </p>
			<p>
			    <%= tweet.message.html_safe %>
			</p>
	    <% end %> <!-- ends each loop -->
	   </div>
	</div> <!-- this div closes the class row -->

</body>
</html>